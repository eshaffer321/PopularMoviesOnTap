<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent">
<android.support.constraint.ConstraintLayout
    android:orientation="vertical" android:layout_width="368dp"
    android:layout_height="188dp"
    android:layout_margin="8dp"
    tools:layout_editor_absoluteY="16dp"
    tools:layout_editor_absoluteX="8dp">

    <TextView
        android:id="@+id/movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Title"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2017-08-16"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <TextView

        android:id="@+id/overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        tools:text="The Guardians must fight to keep their newfound family together as they unravel the mysteries of Peter Quill's true parentage."
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/release_date"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Comedy, Drama, Action"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/movie_title"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="162dp"
        android:layout_height="38dp"
        android:isIndicator="true"
        android:stepSize="0.5"
        android:numStars="5"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/genres"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/watch_trailer_in_youtube"
        android:onClick="launchYoutubeTrailer"
        android:layout_width="99dp"
        android:layout_height="48dp"
        android:text="@string/watch_in_youtube_app"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <RadioButton
        android:id="@+id/favorite_radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorite"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/watch_trailer_in_youtube"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/overview"
        android:layout_marginEnd="7dp"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>



<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:id="@+id/iv_details_view"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/movie_title"
            android:textSize="@dimen/category_text_size"
            android:padding="@dimen/category_padding"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_movie_title"
            android:gravity="center"
            android:textSize="@dimen/content_text_size"
            android:paddingLeft="@dimen/content_left_right_padding"
            android:paddingRight="@dimen/content_left_right_padding"
            android:paddingTop="@dimen/content_top_bottom_padding"
            android:paddingBottom="@dimen/content_top_bottom_padding"
            android:textColor="@color/content_color"
            />

        <View style="@style/Divider"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/movie_overview"
        android:textSize="@dimen/category_text_size"
        android:padding="@dimen/category_padding"
        android:gravity="center"/>


         <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_overview"
             android:gravity="center"
             android:textSize="@dimen/content_text_size"
             android:paddingLeft="@dimen/content_left_right_padding"
             android:paddingRight="@dimen/content_left_right_padding"
             android:paddingTop="@dimen/content_top_bottom_padding"
             android:paddingBottom="@dimen/content_top_bottom_padding"
             android:textColor="@color/content_color"
        />

         <View style="@style/Divider"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/movie_release_date"
            android:padding="@dimen/category_padding"
            android:textSize="@dimen/category_text_size"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_release_date"
            android:gravity="center"
            android:textSize="@dimen/content_text_size"
            android:paddingLeft="@dimen/content_left_right_padding"
            android:paddingRight="@dimen/content_left_right_padding"
            android:paddingTop="@dimen/content_top_bottom_padding"
            android:paddingBottom="@dimen/content_top_bottom_padding"
            android:textColor="@color/content_color"
            />

        <View style="@style/Divider"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/movie_vote_average"
        android:padding="@dimen/category_padding"
        android:gravity="center"
        android:textSize="@dimen/category_text_size"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_vote_average"
        android:gravity="center"
        android:textSize="@dimen/content_text_size"
        android:paddingLeft="@dimen/content_left_right_padding"
        android:paddingRight="@dimen/content_left_right_padding"
        android:paddingTop="@dimen/content_top_bottom_padding"
        android:paddingBottom="@dimen/content_top_bottom_padding"
        android:textColor="@color/content_color"
        />



</LinearLayout>

</ScrollView>



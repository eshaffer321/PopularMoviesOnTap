<?xml version="1.0" encoding="utf-8"?>

<!--Collapsing toolbar code used from A.Leiva
    https://github.com/antoniolg-->



<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="@dimen/toolbar_margin_start"
            app:expandedTitleMarginEnd="@dimen/toolbar_margin_end"
            android:fitsSystemWindows="true">

            <!--TODO(2): Make it show it shows reviews/movies trailiers-->

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dackdrop_height"
                android:layout_gravity="center"
                android:id="@+id/iv_details_view"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/movie_title"
                        android:textSize="@dimen/category_text_size"
                        android:padding="@dimen/category_padding"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_movie_title"
                        android:gravity="center"
                        android:textSize="@dimen/content_text_size"
                        android:paddingLeft="@dimen/content_left_right_padding"
                        android:paddingRight="@dimen/content_left_right_padding"
                        android:paddingTop="@dimen/content_top_bottom_padding"
                        android:paddingBottom="@dimen/content_top_bottom_padding"
                        android:textColor="@color/content_color"
                        tools:text="Title of the Movie Here"
                        />

                    <View style="@style/Divider"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/movie_overview"
                        android:textSize="@dimen/category_text_size"
                        android:padding="@dimen/category_padding"
                        android:gravity="center"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_overview"
                        android:gravity="center"
                        android:textSize="@dimen/content_text_size"
                        android:paddingLeft="@dimen/content_left_right_padding"
                        android:paddingRight="@dimen/content_left_right_padding"
                        android:paddingTop="@dimen/content_top_bottom_padding"
                        android:paddingBottom="@dimen/content_top_bottom_padding"
                        android:textColor="@color/content_color"
                        tools:text="@string/lorem_ipsum"
                        />

                    <View style="@style/Divider"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/movie_release_date"
                        android:padding="@dimen/category_padding"
                        android:textSize="@dimen/category_text_size"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_release_date"
                        android:gravity="center"
                        android:textSize="@dimen/content_text_size"
                        android:paddingLeft="@dimen/content_left_right_padding"
                        android:paddingRight="@dimen/content_left_right_padding"
                        android:paddingTop="@dimen/content_top_bottom_padding"
                        android:paddingBottom="@dimen/content_top_bottom_padding"
                        android:textColor="@color/content_color"
                        tools:text="@string/lorem_ipsum"
                        />

                    <View style="@style/Divider"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/movie_vote_average"
                        android:padding="@dimen/category_padding"
                        android:gravity="center"
                        android:textSize="@dimen/category_text_size"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_vote_average"
                        android:gravity="center"
                        android:textSize="@dimen/content_text_size"
                        android:paddingLeft="@dimen/content_left_right_padding"
                        android:paddingRight="@dimen/content_left_right_padding"
                        android:paddingTop="@dimen/content_top_bottom_padding"
                        android:paddingBottom="@dimen/content_top_bottom_padding"
                        android:textColor="@color/content_color"
                        tools:text="@string/lorem_ipsum"
                        />
                </LinearLayout>


        </FrameLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="@dimen/fab_layout_dimens"
        android:layout_height="@dimen/fab_layout_dimens"
        android:id="@+id/fab"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="bottom|right|end"
        style="@style/Widget.Design.FloatingActionButton"/>

</android.support.design.widget.CoordinatorLayout>

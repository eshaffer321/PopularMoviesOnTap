<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/review_author"
        android:textStyle="bold"
        tools:text="Mr. Funagain's"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />



    <TextView
        android:layout_width="361dp"
        android:layout_height="34dp"
        android:id="@+id/review_content"
        tools:text="asjkdflaskjdflaskjdflkj.Lorem ipsum, sit dola met lakf e  e dpp  ie kajen menkt hav eben ty"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/review_author"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <ImageView
        android:layout_width="42dp"
        android:layout_height="39dp"
        android:src="@drawable/ic_forward_white_24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/review_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>

</layout>